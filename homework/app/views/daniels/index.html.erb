<p id="notice"><%= notice %></p>

<h1>Listing Daniels</h1>

<table>
  <thead>
    <tr>
      <th>Login</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daniels.each do |daniel| %>
      <tr>
        <td><%= daniel.login %></td>
        <td><%= link_to 'Show', daniel %></td>
        <td><%= link_to 'Edit', edit_daniel_path(daniel) %></td>
        <td><%= link_to 'Destroy', daniel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

